<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.NumberJudgmentMapper">

<resultMap type="com.example.demo.domain.model.NumberEnthity" id="number">
  <id column="id" property="id"/>
  <result column="input_number" property="inputNumber" />
  <result column="classification_number" property="classificationNumber" />
  <result column="color" property="color" />
</resultMap>

<!-- 数字登録 -->
<insert id="insertOne">

INSERT INTO number_judgment(
input_number,
classification_number,
color
) VALUES (
#{inputNumber},
#{classificationNumber},
#{color}
)

</insert>

<!-- ５件分の履歴表示 -->
<select id="find5Number" resultType="com.example.demo.domain.model.NumberEnthity">

SELECT * FROM number_judgment ORDER BY id DESC LIMIT 5;

</select>

<!-- 前回入力数値取得 -->
<select id="lastTimeNumber" resultType="com.example.demo.domain.model.NumberEnthity">

SELECT * FROM number_judgment ORDER BY id DESC LIMIT 1;

</select>


</mapper>